/* pages/coupons/index.wxss */
.tabs-list {
  display: flex;
  justify-content: space-around;
}
.tabs-item {
  padding: 22rpx 0 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #828282;
  flex: 1;
}
.active_item {
  color: #333333;
  font-weight: 600;
}

.active {
  color: #333333;
  font-weight: 600;
}

.tabs-ink-bar {
  height: 6rpx;
  width: 24rpx;
  background-color: #FF8F00;
  border-radius: 6rpx;
  position: relative;
  transition: all 0.3s;
  margin-bottom: 12rpx;
}


.coupon-info {
  border-radius: 20rpx;
  margin: 0 24rpx 20rpx;
}
.coupon-item {
  border-radius: 20rpx;
  position: relative;
  background: url("https://udh.oss-cn-hangzhou.aliyuncs.com/d66a0f3f-7c4e-42cf-b691-2b3d7ec922997Frame35431.svg") no-repeat;
  background-size: 100%;
}

.top-content {
  padding: 4rpx 36rpx 16rpx 40rpx;
  display: flex;
  position: relative;
  box-sizing: border-box;
}

.bottom-content {
  padding: 14rpx 24rpx;
  border-top: 1px dashed #e4e7ed;
  color: #714E3B;
  font-size: 11px;
}
.left-content {
  min-width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding-top: 4rpx;
}
.coupon-amount {
  color: #714E3B;
  font-size: 60rpx;
  font-weight: 600;
  position: relative;
  margin: 0 auto;
  text-align: center;

}

.coupon-amount::before {
  content: "ï¿¥";
  position: absolute;
  left: -34rpx;
  bottom: 14rpx;
  font-size: 36rpx;
}
.coupon-limit,
.coupon-type {
  font-size: 22rpx;
  font-weight: 400;
  color: #8A6856;
}
.center-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
  margin-top: 14rpx;
}
.coupon-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #714E3B;
  margin-bottom: 8rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.date {
  font-size: 22rpx;
  font-weight: 400;
  color: #8A6856;
  line-height: 32rpx;
}

.btn-content {
  align-self: center;
  position: absolute;
  right: 36rpx;
  top: 50%;
  transform: translateY(-32%);
}
.btn {
  display: block;
  width: 132rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 24rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background: linear-gradient(280.95deg, #876541 -6.08%, #B89C7E 113.85%);
  border-radius: 200rpx;
}
.icon-use {
  width: 120rpx;
  height: 120rpx;
}
.opacity {
  opacity: 0.5;
}
.coupon-tip {
  background-color: #ffffff;
  padding: 12rpx;
  font-size: 24rpx;
  color: #714E3B;
}