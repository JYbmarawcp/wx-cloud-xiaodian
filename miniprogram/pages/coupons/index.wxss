/* pages/coupons/index.wxss */
.tabs-list {
  display: flex;
  justify-content: space-around;
}
.tabs-item {
  padding: 22rpx 0 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #828282;
  flex: 1;
}
.active_item {
  color: #333333;
  font-weight: 600;
}

.active {
  color: #333333;
  font-weight: 600;
}

.tabs-ink-bar {
  height: 6rpx;
  width: 24rpx;
  background-color: #FF8F00;
  border-radius: 6rpx;
  position: relative;
  transition: all 0.3s;
}

.coupon-item {
  background: rgba(254, 245, 240, 1);
  border-radius: 20rpx;
  position: relative;


}

.top-content {
  padding: 18rpx 36rpx 22rpx 40rpx;
  display: flex;
  position: relative;
}

.bottom-content {
  padding: 14rpx 24rpx;
  border-top: 1px dashed #e4e7ed;
  color: #c7311d;
  font-size: 11px;
}