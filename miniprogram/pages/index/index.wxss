/**index.wxss**/

page {
  background-color: #262432;
  font-family: PingFang SC-Medium, PingFang SC;
}
.home-page {
  min-height: 100vh;
  color: #F6F6F6;
}

.bg-top {
  width: 100%;
}
.home-content {
  position: relative;
  background-color: #262432;
  border-radius: 32rpx;
  margin-top: -50rpx;
  padding: 48rpx 24rpx 0;
}

.shop-logo {
  width: 160rpx;
  border-radius: 50%;
  position: absolute;
  top: -50rpx;
}
.shop-name {
  font-size: 46rpx;
  color: #F6F6F6;
  margin-bottom: 12rpx;
}
.shop-title {
  display: flex;
  justify-content: flex-end;
}
.wifi-wrap {
  width: 78rpx;
  height: 78rpx;
  background-color: #4f4d5a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
}
.wifi-icon {
  width: 38rpx;
}
.address-wrap {
  width: 30rpx;
  height: 30rpx;
  background-color: #4f4d5a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
  font-size: 22rpx;
}
.address-icon {
  /* width: 20rpx; */
}
.address-box {
  display: flex;
  align-items: center;
  color: #8d8a9a;
  margin-bottom: 24rpx;
}
.text-line {
  display: inline-block;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
}
.arrow-icon {
  width: 24rpx;
}
@keyframes around {
  from {
    margin-left: 100%;
  }
  to {
   /* var接受传入的变量 */
    margin-left: 0;
    transform: translateX(-100%);
  }
}
.marquee_container{
  background-color: #322f42;
  color:#fff;
  height: 68rpx;
  line-height: 68rpx;
  position: relative;
  width: 100%;
  margin-top:0rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}
.marquee_text{
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 10s; /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function:linear;
  letter-spacing: 2rpx;
}
.vip-wrap {
  box-sizing: border-box;
  padding: 0 24rpx;
  font-size: 24rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: space-between;
}
.botton-line {
  width: 100%;
  border-bottom: 2rpx solid #8d8a9a;
  margin-bottom: 70rpx;
}

.title {
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.drama-btn {
  height: 70rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 70rpx;
  background-color: #51505b;
}
.hotServiceList_scroll {
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  width: 100%;
  margin-bottom: 24rpx;
  line-height: 40rpx;
}
.hotService_content {
  display: flex;
}
.drama-wrap {
  width: 220rpx;
  margin-right: 22rpx;
  text-align: center;
  font-size: 28rpx;
}
.drama-img {
  border-radius: 8rpx;
  width: 220rpx;
  height: 296rpx;
}
.flex-center {
  display: flex;
  align-items: center;
  color: #9785a0;
}