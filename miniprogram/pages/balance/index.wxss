/* pages/balance/index.wxss */

.balance-page {
  padding: 32rpx;
}
.top-box {
  text-align: center;

}
.balance-text {
  font-size: 80rpx;
  color: #2B2B2B;
  font-weight: bold;
  margin-top: 12rpx;
  letter-spacing: 4rpx;
  opacity: 0.95;
}
.grey-wrap {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #F7F7F9;
  font-size: 24rpx;
  color: rgba(181, 181, 181, 1);
  text-align: center;
}
.item-box {
  position: relative;
  width: 100%;
  padding: 40rpx 0 50rpx;
  background-color: rgba(238, 2, 35, 0.1);
  border-radius: 8rpx;
  text-align: center;
  font-size: 40rpx;
  color: rgba(238, 2, 35, 1);
  font-weight: bold;
  letter-spacing: 4rpx;
  margin-bottom: 30rpx;
}
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.fs28 {
  font-size: 28rpx;
}
.fs24 {
  font-size: 24rpx;
}
.color-b {
  color: #333333;
}
.balance-page .active {
  border: 4rpx solid rgba(254, 106, 17, 1);
}
.balance-page .active .choose-img {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translate(0, -50%);
  width: 36rpx;
  height: 36rpx;
}
.tip-wrap {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  background: linear-gradient(90deg, #EE0223 0%, #FE6A11 100%);
  height: 40rpx;
  width: 140rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 40rpx;
  border-radius: 6rpx;
  color: #FFFFFF;
}
.footer-wrap {
  position: fixed;
  bottom: 0;
  height: 88rpx;
  left: 0;
  right: 0;
  padding-bottom: env(safe-area-inset-bottom);
  padding-left: 32rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: inset 0px 1px 0px #F6F6F6;
  border: 1px solid #E5E6EB;
}
.btn-pay {
  width: 300rpx;
  height: 88rpx;
  background: linear-gradient(90deg, #EE0223 0%, #FE6A11 100%);
  box-shadow: 0px 0px 16rpx 0px rgba(255,87,90,0.3);
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
}
.pay-price {
  font-family: 'Montserrat';
  font-style: normal;
  font-weight: 600;
  font-size: 44rpx;
  line-height: 88rpx;
  color: #1E2128;
}