/* pages/balance/index.wxss */

.balance-page {
  padding: 32rpx;
}
.top-box {
  text-align: center;

}
.balance-text {
  font-size: 80rpx;
  color: #2B2B2B;
  font-weight: bold;
  margin-top: 12rpx;
  letter-spacing: 4rpx;
  opacity: 0.95;
}
.grey-wrap {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #F7F7F9;
  font-size: 24rpx;
  color: rgba(181, 181, 181, 1);
  text-align: center;
}
.item-box {
  width: 100%;
  padding: 40rpx 0 50rpx;
  background-color: rgba(238, 2, 35, 0.1);
  border-radius: 8rpx;
  text-align: center;
  font-size: 40rpx;
  color: rgba(238, 2, 35, 1);
  font-weight: bold;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(254, 106, 17, 1);
}
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.fs28 {
  font-size: 28rpx;
}
.fs24 {
  font-size: 24rpx;
}
.color-b {
  color: #333333;
}
.btn-pay {
  width: 80%;
  height: 88rpx;
  background: linear-gradient(90deg, #EE0223 0%, #FE6A11 100%);
  box-shadow: 0px 0px 16rpx 0px rgba(255,87,90,0.3);
  border-radius: 49rpx;
  margin: auto;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
}