page {
  height: 100%;
}

.container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  box-sizing: border-box;
  /* background: url('https://bytemall.0-1-byte.com/tool-app/img/answer-bg.jpeg') no-repeat center; */
  background: #000;
}

.rotate-img {
  display: block;
  width: 300rpx;
}

.text {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  letter-spacing: 5rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.text-top {
  bottom: 240rpx;
}

.text-bot {
  bottom: 150rpx;
}