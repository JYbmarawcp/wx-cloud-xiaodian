/* pages/shop/index.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #F1F1F1;
}
.shop-page view {
  font-family: PingFang SC-Regular, PingFang SC;
  box-sizing: border-box;
}
.topper {
  height: 316rpx;
  background: url("https://udh.oss-cn-hangzhou.aliyuncs.com/1637d471-a0e8-44c3-abdf-ce4cc77bb1f75780723262x.png") no-repeat;
  background-size: 100%;
  color: #ffffff;
  font-size: 28rpx;
}
.bottom-box {
  text-align: center;
  padding-top: 60rpx;
}
.num {
  font-size: 96rpx;
  margin-right: 10rpx;
}
.points-tip {
  font-size: 20rpx;
}
.exchange-content {
  padding: 0 20rpx;

}
.exchange-title {
  font-size: 28rpx;
  font-weight: bold;
  padding: 32rpx 0 20rpx;
  color: #333333;
}
.points-list {
  display: flex;
  flex-wrap: wrap;
  background-color: #F1F1F1;
  justify-content: space-between;

}
.points-item {
  width: 344rpx;
  padding: 26rpx 28rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #D6AD58;
}
.goods-image {
  width: 286rpx;
  height: 286rpx;
}
.goods-name {
  min-height: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: justify;
  color: #333333;
}
.goods-price {
  text-align: center;
  margin: 6rpx 0 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.fs32 {
  font-size: 32rpx;
  font-weight: bold;
}
.buy-btn {
  margin: auto;
  width: 160rpx;
  height: 48rpx;
  background: #E1BC6F;
  border-radius: 24px;
  font-size: 22rpx;
  color: #ffffff;
  text-align: center;
  line-height: 48rpx;
}
.box-shadow {
  background-color: #ffffff;
  box-shadow: 0px 0px 14px 0px rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
}